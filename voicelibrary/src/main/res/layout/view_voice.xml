<?xml version="1.0" encoding="utf-8"?>
<com.iwith.voice.view.percent.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff">

    <com.iwith.voice.view.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/voice_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15.5sp"
            android:gravity="center"
            android:textColor="#505050"
            app:layout_paddingPercent="3%w"
            android:id="@+id/voice_title"
            android:layout_centerInParent="true"
            />
        <com.iwith.voice.view.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/voice_time_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/voice_tv_time"
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15.5sp"
                android:gravity="center"
                android:textColor="#505050"
                app:layout_paddingTopPercent="3%w"
                app:layout_paddingBottomPercent="3%w"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginRightPercent="2%w"
                android:layout_centerInParent="true"
                />
            <com.iwith.voice.view.percent.PercentLinearLayout
                android:layout_width="wrap_content"
                app:layout_heightPercent="1%w"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_toLeftOf="@+id/voice_tv_time">

                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"/>

                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>

                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>

            </com.iwith.voice.view.percent.PercentLinearLayout>

            <com.iwith.voice.view.percent.PercentLinearLayout
                android:layout_width="wrap_content"
                app:layout_heightPercent="1%w"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/voice_tv_time">

                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"/>

                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>

                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    app:layout_widthPercent="100%h"
                    app:layout_heightPercent="100%h"
                    android:layout_gravity="center"
                    android:background="@drawable/voice_time_line"
                    android:layout_marginLeft="3dp"/>

            </com.iwith.voice.view.percent.PercentLinearLayout>

        </com.iwith.voice.view.percent.PercentRelativeLayout>

    </com.iwith.voice.view.percent.PercentRelativeLayout>

    <com.iwith.voice.view.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="33%w"
        app:layout_marginBottomPercent="8%w"
        app:layout_marginTopPercent="3%w"
        >

        <com.iwith.voice.view.percent.PercentRelativeLayout
            app:layout_widthPercent="33%w"
            app:layout_heightPercent="33%w"
            android:layout_centerInParent="true"
            android:id="@+id/voice_img_parent"
            android:background="@drawable/oval_blue"
            >

            <ImageView
                app:layout_widthPercent="55%w"
                app:layout_heightPercent="80%h"
                android:layout_gravity="center"
                android:id="@+id/voice_img"
                android:background="@drawable/voice"
                android:layout_centerInParent="true"/>

        </com.iwith.voice.view.percent.PercentRelativeLayout>

    </com.iwith.voice.view.percent.PercentRelativeLayout>

</com.iwith.voice.view.percent.PercentLinearLayout>